@{
    ViewData["Title"] = "Yönetici Girişi";
}

<div class="login-container">
    <h1 class="login-title">Yönetici Giriş Ekranı</h1>
    <form asp-action="Login" method="post" class="login-form">
        <div class="form-group">
            <label for="username">Kullanıcı Adı</label>
            <input type="text" id="username" name="username" placeholder="Kullanıcı adınızı girin" required>
        </div>
        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" id="password" name="password" placeholder="Şifrenizi girin" required>
        </div>
        <button type="submit" class="btn-login">Giriş Yap</button>
    </form>
    <div class="register-link">
        <p>Hesabınız yok mu? <a href="/Admin/Register" class="btn-register">Kayıt Ol</a></p>
    </div>
</div>

<link rel="stylesheet" href="/css/Login.css" />
