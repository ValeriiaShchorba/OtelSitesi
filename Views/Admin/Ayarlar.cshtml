@model OtelSitesi.Models.Admin

@{
    ViewData["Title"] = "Admin Ayarları";
}

<div class="settings-container">
    <h1>Admin Ayarları</h1>
    <p>Hesap bilgilerinizi buradan güncelleyebilirsiniz.</p>

    <form asp-action="UpdateSettings" method="post" class="settings-form">
        <div class="form-group">
            <label for="username">Kullanıcı Adı</label>
            <input type="text" id="username" name="KullaniciAdi" value="@Model.KullaniciAdi" required />
        </div>
        <div class="form-group">
            <label for="email">E-posta</label>
            <input type="email" id="email" name="Eposta" value="@Model.Eposta" required />
        </div>
        <div class="form-group">
            <label for="password">Şifre</label>
            <input type="password" id="password" name="Sifre" placeholder="Yeni şifrenizi girin" />
        </div>
        <button type="submit" class="btn-save">Bilgileri Güncelle</button>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            @TempData["Error"]
        </div>
    }

    <a href="/Dashboard" class="btn-back">Dashboard'a Dön</a>
</div>

<link rel="stylesheet" href="/css/Ayarlar.css" />
