@{
    ViewData["Title"] = "İletişim";
}

<div class="contact-header">
    <h1>İLETİŞİM</h1>
    <p>Sorularınız ve talepleriniz için bizimle iletişime geçebilirsiniz.</p>
</div>

@if (ViewData["Success"] != null)
{
    <div style="background-color: #d4edda; color: #155724; padding: 15px; margin-bottom: 20px; border: 1px solid #c3e6cb; border-radius: 5px;">
        @ViewData["Success"]
    </div>
}

@if (ViewData["Error"] != null)
{
    <div style="background-color: #f8d7da; color: #721c24; padding: 15px; margin-bottom: 20px; border: 1px solid #f5c6cb; border-radius: 5px;">
        @ViewData["Error"]
    </div>
}

<div class="contact-container">
    <!-- İletişim Bilgileri -->
    <div class="contact-info">
        <h2>Bize Ulaşın</h2>
        <p><strong>Adres:</strong> Dağ Sokak No: 123, Uludağ, Türkiye</p>
        <p><strong>Telefon:</strong> +90 555 123 4567</p>
        <p><strong>E-posta:</strong> info@uludagbungalov.com</p>
        <h3>Sosyal Medya</h3>
        <a href="https://facebook.com/uludagbungalov" target="_blank">Facebook</a> |
        <a href="https://instagram.com/uludagbungalov" target="_blank">Instagram</a>
    </div>

    <!-- İletişim Formu -->
    <div class="contact-form">
        <h2>Bize Mesaj Gönderin</h2>
        <form action="/Iletisim" method="post">
            <label for="name">Ad Soyad</label>
            <input type="text" id="name" name="name" placeholder="Adınızı ve soyadınızı girin" required>

            <label for="email">E-posta</label>
            <input type="email" id="email" name="email" placeholder="E-posta adresinizi girin" required>

            <label for="message">Mesaj</label>
            <textarea id="message" name="message" rows="5" placeholder="Mesajınızı buraya yazın" required></textarea>

            <button type="submit" class="btn-submit">Gönder</button>
        </form>
    </div>
</div>

<!-- Google Haritalar -->
<div class="contact-map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8354345084815!2d29.038402315315236!3d40.650046979336455!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac8798b8b4a69%3A0xe9f8bf84b7c1af6b!2sUluda%C4%9F%20Bungalov!5e0!3m2!1str!2str!4v1617018574555"
            width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
    </iframe>
</div>
